#version 330 core

layout (location = 0) in vec2 aPos;
layout (location = 1) in vec4 aColor;
layout (location = 2) in vec2 aTexCoord;

out vec4 v_Color;
out vec2 v_TexCoord;

uniform mat4 model;
uniform mat4 proj;

void main()
{
    gl_Position = proj * model * vec4(aPos, 0.0, 1.0);
    v_Color = aColor;
    v_TexCoord = aTexCoord;
}